<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/weather_fragment_layout">



        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/weatherCardView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="?android:attr/selectableItemBackground"
            android:elevation="5dp"
            card_view:cardCornerRadius="4dp">

            <ImageView
                android:id="@+id/weatherImageView"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="2"
                android:background="#ff2288e6"
                android:clickable="true"
                android:cropToPadding="true"
                android:elevation="2dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/apodimgtest" />

            <TextView
                android:id="@+id/my_Weather_textview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:background="#ff15b9ff"
                android:elegantTextHeight="true"
                android:elevation="2dp"
                android:nestedScrollingEnabled="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/apodtextstream"
                android:textColor="#ffe6e6e6" />
        </android.support.v7.widget.CardView>


</LinearLayout>